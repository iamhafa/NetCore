@model IEnumerable<NetCore.Models.Student>

@{
    ViewData["Title"] = "Sinh Viên";
}

<h1>Sinh Viên</h1>
<h4>Lớp Con của Person</h4>
<br>

<p>
    <a asp-action="Create">+Thêm Sinh viên</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CCCD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.CCCD">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CCCD">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CCCD">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
